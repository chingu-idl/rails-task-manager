<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<p><%if @task.completed %>
      <i class="fa-regular fa-square-check"></i>
      <p>This task is complete</p>
    <%else%>
      <i class="fa-regular fa-square"></i>
      <p>This task is not complete</p>
    <%end%></p>

<%= link_to "Back to Task List", tasks_path %>

<%= link_to "Edit Task", task_edit_path %>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
